#:include param_slider.kv

<CWColorButton>:
    size_hint: None, None
    size: dp(40), dp(40)
    radius: [dp(5)]
    on_release: self.on_color_select()
    parent: self.parent

    canvas:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: self.radius

<CWColorPreview>:
    size_hint: None, None
    size: dp(100), dp(100)
    pos_hint: {'center_x': .5, 'center_y': .5}
    radius: [dp(10)]

    canvas:
        Color:
            rgba: self.color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: self.radius

<CWColorWheel>:
    size_hint: None, None
    size: dp(200), dp(200)
    pos_hint: {'center_x': .5, 'center_y': .5}

<CWColorPicker>:
    orientation: 'vertical'
    padding: dp(20)
    spacing: dp(20)
    pos_hint: {'center_x': .5, 'center_y': .5}

    MDBoxLayout:
        size_hint: 1, 4
        CWColorWheel:
            id: color_wheel

        CWColorPreview:
            id: preview
            pos_hint: {'center_x': .5}
            color: root.current_color

    MDLabel:
        id: value_label
        size_hint: 1, None
        size: 0, dp(20)

    MDBoxLayout:
        id: sliders_container
        size_hint: 1, None
        size: 0, dp(100)
        orientation: 'vertical'

        ParamSlider:
            text: 'R:'
            label_width: dp(20)
            id: red_slider
            min: 0
            max: 255
            value: 255
            on_slider: root.on_slider_change_rgb()

        ParamSlider:
            text: 'G:'
            label_width: dp(20)
            id: green_slider
            min: 0
            max: 255
            value: 0
            on_slider: root.on_slider_change_rgb()

        ParamSlider:
            text: 'B:'
            label_width: dp(20)
            id: blue_slider
            min: 0
            max: 255
            value: 0
            on_slider: root.on_slider_change_rgb()

        ParamSlider:
            text: 'H:'
            label_width: dp(20)
            id: hue_slider
            min: 0
            max: 360
            value: 0
            on_slider: root.on_slider_change_hls()

        ParamSlider:
            text: 'L:'
            label_width: dp(20)
            id: lightness_slider
            min: 0
            max: 100
            value: 50
            on_slider: root.on_slider_change_hls()

        ParamSlider:
            text: 'S:'
            label_width: dp(20)
            id: saturation_slider
            min: 0
            max: 100
            value: 100
            on_slider: root.on_slider_change_hls()

    MDGridLayout:
        id: palette
        cols: 5
        spacing: dp(10)
        size_hint: 1, 2
