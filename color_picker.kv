#:include param_slider.kv

<CWColorWheel>:
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: None, None
    ref_width: 130
    ref_height: 130
    width: app.scale_width(self.ref_width)
    height: app.scale_height(self.ref_height)

    Image:
        source: 'color_wheel.png'

<CWColorPreview>:
    size_hint: None, None
    radius: [8]
    ref_width: 40
    ref_height: 20
    width: app.scale_width(self.ref_width)
    height: app.scale_height(self.ref_height)

    canvas:
        Color:
            rgba: self.color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: self.radius

<CWColorPicker>:
    orientation: 'vertical'
    spacing: 20
    size_hint: 1, None
    ref_height: 160
    height: app.scale_height(self.ref_height)
    pos_hint: {'center_x': 0.5, 'center_y': .5}

    MDBoxLayout:
        
        CWColorWheel:
            id: color_wheel

        MDBoxLayout:
            id: sliders_container
            orientation: 'vertical'
            #pos_hint: {'center_x': .5, 'center_y': .5}

            CWColorPreview:
                id: preview
                color: root.current_color

            ParamSlider:
                text: 'R:'
                label_width: 20
                id: slider_red
                min: 0
                max: 255
                value: 255
                on_slider: root.on_slider_change_rgb()

            ParamSlider:
                text: 'G:'
                label_width: 20
                id: slider_green
                min: 0
                max: 255
                value: 0
                on_slider: root.on_slider_change_rgb()

            ParamSlider:
                text: 'B:'
                label_width: 20
                id: slider_blue
                min: 0
                max: 255
                value: 0
                on_slider: root.on_slider_change_rgb()

            ParamSlider:
                text: 'H:'
                label_width: 20
                id: slider_hue
                min: 0
                max: 360
                value: 0
                on_slider: root.on_slider_change_hls()

            ParamSlider:
                text: 'L:'
                label_width: 20
                id: slider_lum
                min: 0
                max: 100
                value: 50
                on_slider: root.on_slider_change_hls()

            ParamSlider:
                text: 'S:'
                label_width: 20
                id: slider_sat
                min: 0
                max: 100
                value: 0
                on_slider: root.on_slider_change_hls()
