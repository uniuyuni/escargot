
#:include param_slider.kv
#:include spacer.kv
#:include separator.kv

<ExportDialog>:
    size_hint: None, None
    size: dp(600), dp(400)

    BoxLayout:
        orientation: 'vertical'
        padding: dp(5)
        spacing: dp(5)

        GridLayout:
            size_hint_y: None
            height: self.minimum_height
            cols: 1
            spacing: dp(5)
            padding: dp(5)

            # プリセットセクション
            BoxLayout:
                size_hint_y: None
                height: dp(20)
                spacing: dp(5)
                
                ParamLabel:
                    text: 'Preset'
                
                Spinner:
                    id: preset_spinner
                    text: 'Default'
                    values: list(root.presets.keys())
                    size_hint_x: 0.7
                    on_text: root.load_preset(self.text)

            VSpacer:
                height: dp(5)
            HSeparator:
            VSpacer:
                height: dp(5)

            # 出力形式セクション
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(20)
                spacing: dp(5)

                ParamLabel:
                    text: 'Output Format'

                Spinner:
                    text: root.format_value
                    values: ['.JPG', '.TIFF', '.HEIC']
                    on_text: root.format_value = self.text

                ParamSlider:
                    id: slider_quality
                    text: "Quality"
                    min: 0
                    max: 100
                    value: 0
                    step: 1
                    opacity: 1 if root.format_value == '.JPG' else 0
                    disabled: root.format_value != '.JPG'
                    value: root.quality_value
                    on_slider: root.quality_value = int(self.value)

            VSpacer:
                height: dp(5)

            # 出力先設定
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(25)
                spacing: dp(5)

                ParamLabel:
                    text: 'Output Location'

                BoxLayout:
                    size_hint_y: None
                    height: dp(25)
                    spacing: dp(5)

                    TextInput:
                        text: root.output_path
                        multiline: False
                        on_text: root.output_path = self.text

                    Button:
                        text: 'Browse'
                        size_hint_x: 0.3
                        on_press: root.browse_output()

            VSpacer:
                height: dp(5)
        
            # サイズ設定セクション
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(20)
                spacing: dp(5)

                ParamLabel:
                    text: 'Output Size'

                Spinner:
                    text: root.size_mode
                    values: ['Original', 'Long Edge', 'Pixels', 'Percentage']
                    on_text: root.size_mode = self.text

                TextInput:
                    text: root.size_value
                    multiline: False
                    disabled: root.size_mode == 'Original'
                    on_text: root.size_value = self.text

            VSpacer:
                height: dp(5)
            HSeparator:
            VSpacer:
                height: dp(5)

            ParamSlider:
                id: slider_sharpen
                text: "Sharpen"
                min: 0
                max: 100
                value: 0
                step: 1
                value: root.sharpen_value
                on_slider: root.sharpen_value = int(self.value)

            # メタデータ設定
            BoxLayout:
                size_hint_y: None
                height: dp(20)
                spacing: dp(5)

                ParamLabel:
                    text: "Metadata"

                CheckBox:
                    size_hint_x: 0.7
                    active: root.include_metadata
                    on_active: root.include_metadata = self.active

            VSpacer:
                height: dp(5)
            HSeparator:
            VSpacer:
                height: dp(5)

            # プリセット管理ボタン
            BoxLayout:
                size_hint_y: None
                height: dp(20)
                spacing: dp(5)

                Button:
                    text: 'Save Preset'
                    on_press: root.save_preset()

                Button:
                    text: 'Delete Preset'
                    on_press: root.delete_preset()
                    disabled: preset_spinner.text == 'Default'

        BoxLayout:
            orientation: 'horizontal'

            VSpacer:
                size_hint_x: 6

            # キャンセルボタン
            Button:
                text: 'Cancel'
                size_hint: 2, None
                height: dp(30)
                on_press: root.cancel()

            # エクスポートボタン
            Button:
                text: 'Export'
                size_hint: 2, None
                height: dp(30)
                on_press: root.export()
