
# #:include param_slider.kv
# #:include spacer.kv
# #:include separator.kv

<ExportDialog>:
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: None, None
    ref_width: 550
    ref_height: 350

    BoxLayout:
        orientation: 'vertical'
        ref_padding: 5
        ref_spacing: 5

        GridLayout:
            size_hint_y: None
            height: self.minimum_height
            cols: 1
            ref_spacing: 5
            ref_padding: 5

            # プリセットセクション
            BoxLayout:
                size_hint_y: None
                ref_height: 20
                ref_spacing: 5
                
                ParamLabel:
                    text: 'Preset'
                
                Spinner:
                    id: preset_spinner
                    text: 'Default'
                    values: list(root.presets.keys())
                    size_hint_x: 0.7
                    on_text: root.load_preset(self.text)

            VSeparator:

            # 出力形式セクション
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                ref_height: 20
                ref_spacing: 5

                ParamLabel:
                    text: 'Output Format'

                Spinner:
                    text: root.format_value
                    values: ['.JPG', '.TIFF', '.HEIC']
                    size_hint_x: None
                    ref_width: 80
                    on_text: root.format_value = self.text

                ParamSlider:
                    id: slider_quality
                    text: "Quality"
                    min: 0
                    max: 100
                    value: 0
                    step: 1
                    opacity: 1 if root.format_value == '.JPG' else 0
                    disabled: root.format_value != '.JPG'
                    value: root.quality_value
                    on_slider: root.quality_value = int(self.value)

            VSpacer:
                ref_height: 5

            # 出力先設定
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                ref_height: 25
                ref_spacing: 5

                ParamLabel:
                    text: 'Output Location'

                BoxLayout:
                    size_hint_y: None
                    ref_height: 25
                    ref_spacing: 5

                    TextInput:
                        text: root.output_path
                        multiline: False
                        on_text: root.output_path = self.text

                    Button:
                        text: 'Browse'
                        size_hint_x: 0.3
                        on_press: root.browse_output()

            VSpacer:
                ref_height: 5
        
            # サイズ設定セクション
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                ref_height: 20
                ref_spacing: 5

                ParamLabel:
                    text: 'Output Size'

                Spinner:
                    text: root.size_mode
                    values: ['Original', 'Long Edge', 'Pixels', 'Percentage']
                    size_hint_x: None
                    ref_width: 120
                    on_text: root.size_mode = self.text

                TextInput:
                    text: root.size_value
                    multiline: False
                    disabled: root.size_mode == 'Original'
                    on_text: root.size_value = self.text

            VSeparator:

            ParamSlider:
                id: slider_sharpen
                text: "Sharpen"
                min: 0
                max: 100
                value: 0
                step: 1
                value: root.sharpen_value
                on_slider: root.sharpen_value = int(self.value)

            # メタデータ設定
            BoxLayout:
                size_hint_y: None
                ref_height: 20
                ref_spacing: 5

                ParamLabel:
                    text: "Metadata"

                CheckBox:
                    size_hint_x: None
                    ref_width: 20
                    halign: 'left'
                    active: root.include_metadata
                    on_active: root.include_metadata = self.active

            # ICC profile
            BoxLayout:
                size_hint_y: None
                ref_height: 20
                ref_spacing: 5

                ParamLabel:
                    text: "ICC Profile"
                Spinner:
                    text: root.icc_profile
                    values: ['sRGB IEC61966-2.1', 'Adobe RGB (1998)', 'ProPhoto RGB']
                    size_hint_x: None
                    ref_width: 180
                    on_text: root.icc_profile = self.text

            VSeparator:

            # プリセット管理ボタン
            BoxLayout:
                size_hint_y: None
                ref_height: 20
                ref_spacing: 5

                Button:
                    text: 'Save Preset'
                    on_press: root.save_preset()

                Button:
                    text: 'Delete Preset'
                    on_press: root.delete_preset()
                    disabled: preset_spinner.text == 'Default'

        BoxLayout:
            orientation: 'horizontal'

            VSpacer:
                size_hint_x: 3

            # キャンセルボタン
            Button:
                text: 'Cancel'
                size_hint: 2, None
                ref_height: 30
                on_press: root.cancel()

            # エクスポートボタン
            Button:
                text: 'Export'
                size_hint: 2, None
                ref_height: 30
                on_press: root.export()
