<MaskLayer>:
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(40)
    spacing: dp(5)
    padding: dp(5)

    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id: mask_name_label
        text: root.mask_name
        size_hint_x: 0.7
        font_size: '12sp'

    Button:
        id: delete_button
        text: 'X'
        size_hint_x: 0.15
        font_size: '10sp'
        on_press: root.delete_mask(self)

    Button:
        id: active_button
        text: 'A'
        size_hint_x: 0.15
        font_size: '10sp'
        on_press: root.set_active(self)

<MaskEditor2>:
    FloatLayout:
        id: mask_canvas
        size_hint: 1, 1
        pos_hint: {'x': 0, 'y': 0}

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: dp(60), dp(240)
        pos_hint: {'right': 1, 'top': 0.9}
        spacing: dp(5)
        padding: dp(5)

        canvas.before:
            Color:
                rgba: 0.2, 0.2, 0.2, 0.7
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            id: circular_gradient_button
            text: 'C'
            size_hint_y: 0.2
            on_press: root.select_circular_gradient_mask(self)

        Button:
            id: gradient_button
            text: 'G'
            size_hint_y: 0.2
            on_press: root.select_gradient_mask(self)

        Button:
            id: full_button
            text: 'F'
            size_hint_y: 0.2
            on_press: root.select_full_mask(self)

        Button:
            id: free_draw_button
            text: 'D'
            size_hint_y: 0.2
            on_press: root.select_free_draw_mask(self)

        Button:
            id: segment_button
            text: 'S'
            size_hint_y: 0.2
            on_press: root.select_segment_mask(self)

    BoxLayout:
        id: mask_layers_container
        orientation: 'vertical'
        size_hint: None, None
        size: dp(150), dp(200)
        pos_hint: {'right': 0.95, 'y': 0.05}
        spacing: dp(2)
        padding: dp(5)

        canvas.before:
            Color:
                rgba: 0.2, 0.2, 0.2, 0.7
            Rectangle:
                pos: self.pos
                size: self.size 