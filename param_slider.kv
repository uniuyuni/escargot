
<HeadLabel@MDLabel>:
    font_size: '10pt'
    halign: 'left'
    size_hint_y: None
    ref_height: 18
    height: app.scale_height(self.ref_height)

<ParamBoxLayout@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    ref_height: 22
    height: app.scale_height(self.ref_height)

<ParamLabel@MDLabel>:
    font_size: '9pt'
    halign: 'right'
    color: 'b0b0b0'
    size_hint_x: None
    ref_width: 100
    width: app.scale_width(self.ref_width)

<ParamSlider>:
    text: 'Label'
    orientation: 'horizontal'
    size_hint_y: None
    ref_height: 24
    height: app.scale_height(self.ref_height)
    label_width: 100
    on_text: root.on_label_text()

    ParamLabel:
        id: label
        ref_width: self.parent.label_width
        
    MDSlider:
        id: slider
        hint: False
        size_hint_x: 1
        on_value: root.on_slider_value()
        on_touch_down: root.on_slider_touch_down(args[1])

        #MDSliderHandle:
        #    size: 10, 10

    TextInput:
        id: input
        halign: 'right'
        valign: 'middle'
        font_size: '9pt'
        multiline: False
        size_hint_x: None
        ref_width: 40
        width: app.scale_width(self.ref_width)
        on_text_validate: root.on_input_text_validate()

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        ref_width: 15
        width: app.scale_width(self.ref_width)
        
        Button:
            #size_hint_y: 1
            on_press: root.on_button_press(root.ids['slider'].step)
        Button:
            #size_hint_y: 1
            on_press: root.on_button_press(-root.ids['slider'].step)
