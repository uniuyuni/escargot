
<HeadLabel@MDLabel>:
    text_size: self.size
    size: 0, dp(20)
    size_hint_y: None
    font_size: '10pt'
    halign: 'left'
    valign: 'center'

<ParamLabel@MDLabel>:
    size: dp(100), 0
    size_hint_x: None
    halign: 'right'
    font_size: '9pt'
    color: 'b0b0b0' 

<ParamSlider>:
    orientation: 'horizontal'
    size: dp(350), dp(20)
    size_hint: None, None
    text: 'Label'
    on_text: root.on_label_text()

    ParamLabel:
        id: label
        
    MDSlider:
        size_hint_x: 5
        id: slider
        hint: False
        on_value: root.on_slider_value()
        on_touch_down: root.on_slider_touch_down(args[1])

    TextInput:
        id: input
        size: dp(35), dp(20)
        size_hint: None, None
        halign: 'right'
        font_size: '9pt'
        multiline: False
        on_text_validate: root.on_input_text_validate()

    BoxLayout:
        size: dp(25), dp(20)
        size_hint: None, None
        orientation: 'vertical'
        Button:
            on_press: root.on_button_press(root.ids['slider'].step)
        Button:
            on_press: root.on_button_press(-root.ids['slider'].step)
