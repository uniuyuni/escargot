<HeadLabel@MDLabel>:
    size_hint_y: None
    height: dp(20)
    font_size: '10pt'
    halign: 'left'
    valign: 'center'

<ParamLabel@MDLabel>:
    size_hint_x: 0.2
    halign: 'right'
    font_size: '9pt'
    color: 'b0b0b0' 

<ParamSlider>:
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(20)
    text: 'Label'
    on_text: root.on_label_text()

    ParamLabel:
        id: label
        
    MDSlider:
        size_hint_x: 0.6
        id: slider
        hint: False
        on_value: root.on_slider_value()
        on_touch_down: root.on_slider_touch_down(args[1])

    TextInput:
        id: input
        size_hint_x: 0.1
        halign: 'right'
        font_size: '9pt'
        multiline: False
        on_text_validate: root.on_input_text_validate()

    BoxLayout:
        size_hint_x: 0.05
        orientation: 'vertical'
        Button:
            size_hint_y: 0.5
            on_press: root.on_button_press(root.ids['slider'].step)
        Button:
            size_hint_y: 0.5
            on_press: root.on_button_press(-root.ids['slider'].step)
