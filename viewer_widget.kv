#:include spacer.kv

<ViewerWidget>:
    orientation: 'vertical'
    size_hint_y: 0.15
    
    ScrollView:
        id: scroll
        scroll_type: ['bars']
        size_hint: 1, 1
        bar_width: 0.01 * self.width
        scroll_wheel_distance: 0.1 * self.width
        do_scroll_x: root.do_scroll_x
        do_scroll_y: root.do_scroll_y

        MDGridLayout:
            id: grid_layout
            cols: root.cols
            size_hint: None, None
            height: self.minimum_height
            width: self.minimum_width
            adaptive_height: False
            padding: 0.01 * self.width
            spacing: 0.005 * self.width
